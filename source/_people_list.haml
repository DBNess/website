%ul.people_list
  - data.people.select { |k, v| v.pages.include?(filter) }.sort_by { |k, v| v.type + v.name }.each do |k, v|
    %li{ class: v.type }
      %a{ id: k }
      .info.pull-left
        %a{ href: v.url, target: '_blank' }
          = image_tag v.image, alt: v.name
        %ul.inline.social
          - v[:social].each do |type, url|
            %li
              %a{ href: url, target: '_blank' }
                %span{ class: "icon-#{type}" }
      %p
        = link_to v.name, v.url, target: '_blank', class: 'name'
        = v.bio

